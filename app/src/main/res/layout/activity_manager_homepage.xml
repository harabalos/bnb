<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/addAccommodationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Accommodation"
        android:layout_marginTop="20dp"
        android:visibility="visible"/>

    <Button
        android:id="@+id/viewAccommodationsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Accommodations"
        android:layout_below="@id/addAccommodationButton"
        android:layout_marginTop="20dp"
        android:visibility="visible"/>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_below="@id/viewAccommodationsButton"
        android:layout_marginTop="20dp"
        android:visibility="visible"/>

</RelativeLayout>
